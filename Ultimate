    <script>
        // Enhanced Floating Particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 80;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (Math.random() * 15 + 15) + 's';
                particle.style.width = (Math.random() * 3 + 2) + 'px';
                particle.style.height = particle.style.width;
                particlesContainer.appendChild(particle);
            }
        }

        // Navbar scroll effect
        let lastScroll = 0;
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            const currentScroll = window.pageYOffset;
            
            if (currentScroll > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
            
            lastScroll = currentScroll;
        });

        // Company Carousel - Enhanced
        let currentSlide = 0;
        const slides = document.querySelectorAll('.company-slide');
        const totalSlides = slides.length;
        let carouselInterval;

        function createDots() {
            const dotsContainer = document.getElementById('carouselDots');
            for (let i = 0; i < totalSlides; i++) {
                const dot = document.createElement('div');
                dot.className = 'dot' + (i === 0 ? ' active' : '');
                dot.addEventListener('click', () => {
                    goToSlide(i);
                    resetCarousel();
                });
                dotsContainer.appendChild(dot);
            }
        }

        function goToSlide(index) {
            currentSlide = index;
            const slider = document.getElementById('companiesSlider');
            slider.style.transform = `translateX(-${index * 100}%)`;
            
            slides.forEach((slide, i) => {
                slide.classList.toggle('active', i === index);
            });
            
            document.querySelectorAll('.dot').forEach((dot, i) => {
                dot.classList.toggle('active', i === index);
            });
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            goToSlide(currentSlide);
        }

        function resetCarousel() {
            clearInterval(carouselInterval);
            carouselInterval = setInterval(nextSlide, 3500);
        }

        // Interactive Quiz System
        let currentQuizStep = 1;
        const totalQuizSteps = 5;
        const quizAnswers = {};

        function updateProgress() {
            const progress = (currentQuizStep / totalQuizSteps) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('quizProgress').textContent = `Question ${currentQuizStep} of ${totalQuizSteps}`;
        }

        function showStep(step) {
            document.querySelectorAll('.quiz-step').forEach(s => s.classList.remove('active'));
            const targetStep = document.querySelector(`.quiz-step[data-step="${step}"]`);
            if (targetStep) {
                targetStep.classList.add('active');
            }
            if (step === 6) {
                // Completion screen - show 100% and hide progress
                document.getElementById('progressFill').style.width = '100%';
                document.getElementById('quizProgress').textContent = 'Complete!';
            } else {
                updateProgress();
            }
        }

        function nextQuestion() {
            if (currentQuizStep < totalQuizSteps) {
                currentQuizStep++;
                showStep(currentQuizStep);
                disableNextButton(); // Disable until they select an answer
            } else {
                // Go to completion screen (step 6)
                currentQuizStep = 6;
                showStep(6);
            }
        }

        function previousQuestion() {
            if (currentQuizStep > 1) {
                currentQuizStep--;
                showStep(currentQuizStep);
                // Re-enable next button if answer was already selected
                const currentStepEl = document.querySelector(`.quiz-step[data-step="${currentQuizStep}"]`);
                if (currentStepEl) {
                    const hasSelected = currentStepEl.querySelector('.quiz-option.selected');
                    if (hasSelected) {
                        enableNextButton();
                    } else {
                        disableNextButton();
                    }
                }
            }
        }

        function enableNextButton() {
            const nextBtn = document.querySelector(`#nextBtn${currentQuizStep}`);
            if (nextBtn) {
                nextBtn.disabled = false;
            }
        }

        function disableNextButton() {
            const nextBtn = document.querySelector(`#nextBtn${currentQuizStep}`);
            if (nextBtn) {
                nextBtn.disabled = true;
            }
        }

        // Handle option selection
        document.addEventListener('click', (e) => {
            if (e.target.closest('.quiz-option')) {
                const option = e.target.closest('.quiz-option');
                const step = option.closest('.quiz-step');
                const stepNumber = step?.getAttribute('data-step');
                
                if (stepNumber && parseInt(stepNumber) <= totalQuizSteps) {
                    // Remove selected from other options in this step
                    step.querySelectorAll('.quiz-option').forEach(opt => {
                        opt.classList.remove('selected');
                    });
                    
                    // Add selected to clicked option
                    option.classList.add('selected');
                    
                    // Save answer
                    const questionText = step.querySelector('.quiz-question').textContent;
                    const answerText = option.querySelector('.quiz-option-text').textContent;
                    quizAnswers[stepNumber] = {
                        question: questionText,
                        answer: answerText,
                        value: option.getAttribute('data-value')
                    };
                    
                    // Enable next button
                    enableNextButton();
                }
            }
        });

        // Animate numbers - Enhanced
        function animateNumbers() {
            const stats = document.querySelectorAll('.stat-number');
            
            stats.forEach(stat => {
                const target = parseInt(stat.getAttribute('data-target'));
                const suffix = stat.getAttribute('data-suffix') || '';
                const duration = 2500;
                const increment = target / (duration / 16);
                let current = 0;
                
                const updateNumber = () => {
                    current += increment;
                    if (current < target) {
                        if (stat.textContent.includes('$')) {
                            stat.textContent = '$' + Math.floor(current) + suffix;
                        } else if (stat.textContent.includes('%')) {
                            stat.textContent = Math.floor(current) + '%';
                        } else {
                            stat.textContent = Math.floor(current);
                        }
                        requestAnimationFrame(updateNumber);
                    } else {
                        if (stat.textContent.includes('$')) {
                            stat.textContent = '$' + target + suffix;
                        } else if (stat.textContent.includes('%')) {
                            stat.textContent = target + '%';
                        } else {
                            stat.textContent = target + 'X';
                        }
                    }
                };
                
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            updateNumber();
                            observer.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.5 });
                
                observer.observe(stat);
            });
        }

        // Scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const fadeObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            fadeObserver.observe(el);
        });

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    const offsetTop = target.offsetTop - 80;
                    window.scrollTo({
                        top: offsetTop,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Parallax effect
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const cards = document.querySelectorAll('.service-card, .review-card, .stat-card');
            
            cards.forEach((card, index) => {
                const rect = card.getBoundingClientRect();
                if (rect.top < window.innerHeight && rect.bottom > 0) {
                    const rate = (rect.top - window.innerHeight / 2) * 0.1;
                    card.style.transform = `translateY(${rate}px)`;
                }
            });
        });

        // Initialize
        createParticles();
        createDots();
        animateNumbers();
        resetCarousel();
        updateProgress(); // Initialize quiz progress

        // Mouse cursor effect (optional enhancement)
        document.addEventListener('mousemove', (e) => {
            const cards = document.querySelectorAll('.service-card, .review-card, .stat-card');
            cards.forEach(card => {
                const rect = card.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                if (x >= 0 && x <= rect.width && y >= 0 && y <= rect.height) {
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    const moveX = (x - centerX) / 20;
                    const moveY = (y - centerY) / 20;
                    card.style.transform = `translate(${moveX}px, ${moveY}px)`;
                }
            });
        });
    </script>
</body>
</html>

